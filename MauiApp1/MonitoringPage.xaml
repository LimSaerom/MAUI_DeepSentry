<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiApp1.MonitoringPage"
             BackgroundColor="#F9F9F9"
             Title="MonitoringPage">

    <ScrollView>
        <Grid Padding="20" RowSpacing="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 왼쪽 상단 토글 메뉴 버튼 및 메뉴 -->
            <Grid x:Name="OverlayMenu"
                  Style="{StaticResource OverlayMenu}"
                  RowDefinitions="Auto"
                  ColumnDefinitions="Auto,Auto">

                <Button x:Name="ToggleMenuBtn"
                        Style="{StaticResource ToggleMenuBtn}"
                        Grid.Column="0"
                        Text="☰"
                        Clicked="ToggleMenuBtn_Clicked" />

                <StackLayout x:Name="MenuPanel"
                             Style="{StaticResource MenuPanel}"
                             Grid.Column="1">
                
                    <Button Style="{StaticResource MenuBtn}" Text="실시간" Clicked="GoToPage_Clicked" />
                    <Button Style="{StaticResource MenuBtn}" Text="기록확인" Clicked="GoToPage1_Clicked" />
                    <Button Style="{StaticResource MenuBtn}" Text="현황분석" Clicked="GoToPage2_Clicked" />
                </StackLayout>
            </Grid>

            <!-- 타이틀 -->
            <Label Grid.Row="0"
                   Style="{StaticResource TitleHeadline}"
                   Text="Real-Time&#10;Monitoring"
                   HorizontalOptions="Center"
                   Margin="0,60,0,10" />

            <!-- 실시간 영상 Placeholder      / 자리잡기 위한 코드 → 저장된 이미지로 사용했었음  
            <StackLayout Grid.Row="1"
                         Spacing="5"
                         Padding="0"
                         HorizontalOptions="Center">
                <Image x:Name="VideoPlaceholder"
                       Source="monitoring.png"
                       HeightRequest="300"
                       Aspect="AspectFit"
                       BackgroundColor="#EEEEEE" />
                <Label Text="※ 상단 프레임은 실시간 영상 위치를 잡기 위함 (임시 이미지)"
                       FontSize="14"
                       TextColor="#999999"
                       HorizontalTextAlignment="Center" />
            </StackLayout>
            -->
            
            <!-- 실시간 영상 Placeholder -->
            <StackLayout Grid.Row="1"
                         Spacing="5"
                         Padding="0"
                         HorizontalOptions="Center">
                <toolkit:MediaElement x:Name="VideoPlayer"
                              HeightRequest="500"
                              Aspect="AspectFit"
                              ShouldAutoPlay="True"
                              Source= ""/> 
            </StackLayout>
            

            <!-- 객체 탐지 정보 -->
            <Frame Grid.Row="2"
                   BackgroundColor="#FFFFFF"
                   CornerRadius="12"
                   Padding="20"
                   BorderColor="#CCCCCC"
                   HasShadow="False"
                   Margin="0,10,0,0">
                <VerticalStackLayout Spacing="15">

                    <Label Text="실시간 탐지 내역"
                           HorizontalOptions="Center"
                           FontSize="20"
                           TextColor="#222222"
                           FontAttributes="Bold" />

                    <HorizontalStackLayout Spacing="10">
                        <Label Text="탐지위치:"
                               FontSize="20"
                               TextColor="#333333"
                               FontAttributes="Bold" />
                        <Label Text="{Binding DetLocation}"
                               FontSize="20"
                               TextColor="#666666" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <Label Text="탐지동물:"
                               FontSize="20"
                               TextColor="#333333"
                               FontAttributes="Bold" />
                        <Label Text="{Binding DetAnimal}"
                               FontSize="20"
                               TextColor="#666666" />
                    </HorizontalStackLayout>

                    <Label Text="※ 1일전을 기준으로 기록이 있는 경우만 표기됩니다. ※"
                           HorizontalOptions="Center"
                           FontSize="12"
                           TextColor="Red"
                           FontAttributes="Bold" />

                </VerticalStackLayout>
            </Frame>

        </Grid>
    </ScrollView>
</ContentPage>
